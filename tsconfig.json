{
    "compilerOptions": {
		"target": "esnext",
		"strict": true,
		"incremental": true,
		"noEmit": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"typeRoots": [
		    "node_modules/@types"
		],
		"types": [
			"eslint",
			"mocha",
		    "node",
		    "ws"
		],
		"lib": [
		    "esnext"
		]
	},
	"include": [
		"*.ts",
		"Lanette-private/**/*.ts",
		"private/**/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"Lanette-private/web/**/*.ts",
	]
}
